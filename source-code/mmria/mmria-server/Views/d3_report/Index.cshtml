@using System.Security.Claims;
@{
  Layout = "_LayoutBase";
  ViewBag.BreadCrumbs = true;
  var userName = "";
  
  if (User.Identities.Any(u => u.IsAuthenticated))
  {
    userName = User.Identities.First(
        u => u.IsAuthenticated && 
        u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value;
  }
}

@section HeadScripts
{
  <script src="../scripts/d3/d3.min.js" type="text/javascript"></script>
  <script src="../scripts/d3/c3.min.js" type="text/javascript"></script>
  <script src="../scripts/d3-report/index.js" type="text/javascript"></script>
  <script src="../scripts/d3-report/navigation_renderer.js" type="text/javascript"></script>
  <script src="../scripts/d3-report/report_renderer.js" type="text/javascript"></script>
  <script src="../scripts/mmria.js" type="text/javascript"></script>
}

<h1 class="h2" tabindex="-1">Interactive Aggregate Report</h1>
<p class="mb-4"><strong>Report generated:</strong> @DateTime.Now.ToString("MMM d, yyyy hh:mm:ss tt") by @userName</p>


<div id="output"> </div>

<div id="report_output_id"></div>
