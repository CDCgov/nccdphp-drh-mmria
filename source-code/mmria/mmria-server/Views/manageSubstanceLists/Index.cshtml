@using System.Security.Claims;
@{
  Layout = "_LayoutBase"; // _cdc_no_footer used to be the template file
  var userName = "";

  ViewBag.BreadCrumbs = true;
  ViewBag.Sidebar = false;

  if (User.Identities.Any(u => u.IsAuthenticated))
  {
    userName = User.Identities.First(
        u => u.IsAuthenticated && 
        u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value;
  }
}

@section HeadScripts {
  <link rel="stylesheet" type="text/css" href="@Url.Content("~/reactjs/MetadataSubstanceLists/style.css")">
}

@section Scripts {
  <script src="@Url.Content("~/reactjs/sharedmodules/SelectOptions.jsx")"></script>
  <script src="@Url.Content("~/reactjs/MetadataSubstanceLists/helpers.js")"></script>
  <script src="@Url.Content("~/reactjs/MetadataSubstanceLists/AddNewMapping.jsx")"></script>
  <script src="@Url.Content("~/reactjs/MetadataSubstanceLists/SubstanceRow.jsx")"></script>
  <script src="@Url.Content("~/reactjs/MetadataSubstanceLists/MetadataSubstanceLists.jsx")"></script>
}

